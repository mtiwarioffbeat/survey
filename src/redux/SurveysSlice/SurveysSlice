import {Survey, Surveys} from "../../types/survey"
import { createSlice, PayloadAction } from "@reduxjs/toolkit";

const initialState:Surveys[] = [
{
    id: null,
    title: null,
    description: null,
    createdBy: null,
    isPublished: null,
    isOpenedInEditMode: null,
    questions: [{
        title: null,
        description: null,
        sortOrder:null,
        type: {
            title: null,
            description: null
        },
        choices: [{
            title: null,
            description:null,
            sortOrder: null
        }],
    }]
}
]


const surveysSlice = createSlice({
    name:"surveys",
    initialState,
    reducers:{
        setSurveys(state,action:PayloadAction<Surveys[]>){
           return [...state, ...action.payload]
        }
    }
})

export const {setSurveys} = surveysSlice.actions;
export default surveysSlice.reducer;
